@page
@model FysioDanmark_Project_Website.CreateBookModel

<h5>The number of books is : @Model.Books.Count</h5>

<h6 style="color:blue"> Create a new book</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Services.ISBN" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Services.ISBN" type="text" class="form-control">
            <span asp-validation-for="@Model.Services.ISBN" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Services.Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Services.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.Services.Title" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Services.ImageName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Services.ImageName" type="text" class="form-control">
            <span asp-validation-for="@Model.Services.ImageName" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Services.Author" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Services.Author" type="text" class="form-control">
            <span asp-validation-for="@Model.Services.Author" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Services.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Services.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Services.Price" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Add Book
            </button>
        </div>
    </div>
</form>