@page
@model FysioDanmark_Project_Website.ManageServices


<title>Manage Services</title>
<p>
    <a asp-page="CreateService">Create New Service</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Title </th>
        <th>Price</th>
        <th>Image</th>
    </tr>
    </thead>
    <tbody>
    @if(Model.AllServices.Count!=0)
    {        
        @foreach (var item in Model.AllServices)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <img src="~/Services/@item.ImageName" width="80" height="70">
                </td>
                <td>
                    <form method="post">
                        <input type="hidden" asp-for="@item.Id" name="id">
                        <button type="submit" style="color: indianred; background: none; border: none; padding: 0; text-decoration: underline; cursor: pointer;">Delete</button>
                    </form>
                </td>        
            </tr>
        }
    }
    </tbody>
</table>