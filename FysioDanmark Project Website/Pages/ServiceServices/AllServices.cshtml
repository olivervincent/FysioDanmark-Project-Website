@page
@model FysioDanmark_Project_Website.AllServicesModel
@{
    ViewData["Title"] = "AllServices";
}

<h1> Add a service to your cart </h1>
<table class="table">
    <thead>
        <tr>
            <th>Title </th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    @if(Model.AllServices.Count!=0)
        {        
        @foreach (var item in Model.AllServices)
        {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Price
            </td>
            <td>
                <a asp-page="/BookingServices/ShoppingCart" asp-route-id="@item.Id"
                       class="btn btn-success btn-group-lg pull-right"  >
                        Add To Cart
                </a>
            </td>          
        </tr>
        }
        }
    </tbody>
</table>

